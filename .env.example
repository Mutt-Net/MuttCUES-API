# MuttCUES Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_PASSWORD=changeme123
POSTGRES_DB=muttcues
POSTGRES_USER=muttcues

# API Configuration
SPRING_PROFILES_ACTIVE=prod
API_PORT=8080

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8080

# Image Processing Configuration
IMAGE_PROCESSING_MAX_FILE_SIZE=50MB
UPSCAYL_DEFAULT_SCALE=2
UPSCAYL_DEFAULT_MODEL=realesrgan-x4plus

# Redis Configuration
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb

# Security
JWT_SECRET=change-this-to-a-secure-random-string
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=15d

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@muttcues.local

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# Feature Flags
FEATURE_UPSCALING_ENABLED=true
FEATURE_DDS_CONVERSION_ENABLED=false
FEATURE_BATCH_PROCESSING_ENABLED=false

# Performance Tuning
JAVA_OPTS=-Xmx2g -Xms512m
MAX_CONCURRENT_PROCESSING=4
PROCESSING_TIMEOUT_SECONDS=600

# Storage
STORAGE_TYPE=local  # local, s3, azure
S3_BUCKET_NAME=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Docker Build
COMPOSE_PROJECT_NAME=muttcues
COMPOSE_FILE=docker-compose.yml
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# GPU Support (for upscaling)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility
UPSCAYL_GPU_ENABLED=true
UPSCAYL_GPU_COUNT=1
